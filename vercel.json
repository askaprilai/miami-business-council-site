{
  "buildCommand": "echo 'No build required for static site'",
  "outputDirectory": ".",
  "cleanUrls": true,
  "rewrites": [
    { "source": "/about-us", "destination": "/about-us.html" },
    { "source": "/directory", "destination": "/directory.html" },
    { "source": "/member-login", "destination": "/member-login.html" },
    { "source": "/portal", "destination": "/portal.html" },
    { "source": "/membership-signup", "destination": "/membership-signup.html" },
    { "source": "/membership", "destination": "/membership.html" },
    { "source": "/blog", "destination": "/blog.html" },
    { "source": "/contact", "destination": "/contact.html" }
  ],
  "redirects": [
    { "source": "/about-us.html", "destination": "/about-us", "permanent": true },
    { "source": "/directory.html", "destination": "/directory", "permanent": true },
    { "source": "/member-login.html", "destination": "/member-login", "permanent": true },
    { "source": "/member-portal", "destination": "/portal", "permanent": true },
    { "source": "/member-portal.html", "destination": "/portal", "permanent": true },
    { "source": "/portal.html", "destination": "/portal", "permanent": true },
    { "source": "/membership-signup.html", "destination": "/membership-signup", "permanent": true },
    { "source": "/membership.html", "destination": "/membership", "permanent": true },
    { "source": "/blog.html", "destination": "/blog", "permanent": true }
  ],
  "headers": [
    {
      "source": "/portal",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        },
        {
          "key": "Surrogate-Control",
          "value": "no-store"
        }
      ]
    },
    {
      "source": "/member-login",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Vercel-Skip-Toolbar",
          "value": "1"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  }
}